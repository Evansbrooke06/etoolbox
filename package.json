{
  "name": "web-toolbox",
  "version": "1.1.0",
  "author": {
    "name": "Andre Masson",
    "email": "amwebexpert@gmail.com",
    "url": "https://www.linkedin.com/in/amwebexpert/"
  },
  "description": "Collection of web developer utilities packaged as a desktop app",
  "homepage": ".",
  "main": "build/electron/main.js",
  "private": false,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:windev": "concurrently \"SET BROWSER=none && yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:build": "yarn build && tsc -p electron && electron-builder",
    "electron:build:all": "yarn build && tsc -p electron && electron-builder -mw",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.amwebexpert.etoolbox",
    "productName": "Web Toolbox",
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/node": "^14.14.13",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "connected-react-router": "^6.8.0",
    "copy-to-clipboard": "^3.3.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "jwt-decode": "^3.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.4",
    "react-helmet": "^6.1.0",
    "react-html-parser": "^2.0.2",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-scripts": "4.0.1",
    "react-syntax-highlighter": "^15.4.3",
    "redux": "^4.0.5",
    "redux-actions": "^2.6.5",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.2.0",
    "redux-saga": "^1.1.3",
    "regex-parser": "^2.2.11",
    "styled-components": "^5.2.1",
    "typescript": "4.1.3",
    "use-debounce": "^5.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "@types/jest": "^26.0.19",
    "@types/react-helmet": "^6.1.0",
    "@types/react-html-parser": "^2.0.1",
    "@types/react-redux": "^7.1.12",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-router-redux": "^5.0.18",
    "@types/react-syntax-highlighter": "^13.5.0",
    "@types/redux-actions": "^2.6.1",
    "@types/redux-logger": "^3.0.8",
    "@types/styled-components": "^5.1.5",
    "@types/uuid": "^8.3.0",
    "concurrently": "^5.3.0",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "redux-devtools-extension": "^2.13.8",
    "wait-on": "^5.2.0"
  }
}